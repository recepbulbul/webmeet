<!DOCTYPE html>
<html>
<head>
    <title>Video Görüşme - Giriş</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="login-box">
            <div class="logo">
                <i class="material-icons">video_camera_front</i>
            </div>
            <h1>Video Görüşme</h1>
            <p class="subtitle">Arkadaşlarınızla hemen görüşmeye başlayın</p>
            
            <div class="form-group">
                <button onclick="createRoom()" class="create-btn">
                    <i class="material-icons">add_circle</i>
                    Yeni Görüşme Başlat
                </button>
            </div>
            
            <div class="divider">
                <span>veya</span>
            </div>
            
            <div class="form-group">
                <div class="input-group">
                    <i class="material-icons">meeting_room</i>
                    <input type="text" id="roomInput" placeholder="Oda kodunu girin">
                </div>
                <button onclick="joinRoom()" class="join-btn">
                    <i class="material-icons">login</i>
                    Odaya Katıl
                </button>
            </div>
        </div>
    </div>
    <script>
        function createRoom() {
            fetch('/create-room', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                window.location.href = `/room/${data.roomId}`;
            });
        }

        function joinRoom() {
            const roomId = document.getElementById('roomInput').value.trim();
            if (roomId) {
                window.location.href = `/room/${roomId}`;
            } else {
                alert('Lütfen bir Oda ID girin');
            }
        }
    </script>
</body>
</html> 